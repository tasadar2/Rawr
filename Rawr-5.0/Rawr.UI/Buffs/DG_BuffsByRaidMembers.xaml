                        <!-- Row 5 -->
                        <TextBlock Name="LB_Hunter_Pet" Text="Pet:" Grid.Row="5" FontWeight="Bold" Grid.RowSpan="1" HorizontalAlignment="Left" Margin="4,2" VerticalAlignment="Center" Grid.ColumnSpan="1" Grid.Column="0" />
                        <ComboBox Name="CB_Hunter_Pet_BM" Grid.Row="5" Grid.Column="1" Grid.RowSpan="1" Margin="4,2" Grid.ColumnSpan="1" SelectedIndex="17">
