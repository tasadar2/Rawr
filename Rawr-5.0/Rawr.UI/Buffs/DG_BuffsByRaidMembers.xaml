                        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="Certain Pets Give Target Debuffs" Margin="4,2" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Hunter_MM" Content="Marksmanship" Grid.Row="3" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="HunterSpec" FontWeight="Bold" Checked="CK_HunterSpec_Changed" />
