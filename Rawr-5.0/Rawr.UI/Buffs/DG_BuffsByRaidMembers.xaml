                            <System:String>Serpent: Corrosive Spit (Weakened Armor)</System:String>
                            <System:String>Raptor: Tear Armor (Weakened Armor)</System:String>
                            <System:String>Ravager: Ravage (Physical Vulnerability)</System:String>
                            <System:String>Worm: Acid Spit (Physical Vulnerability)</System:String>
                            <System:String>Dragonhawk: Fire Breath (Magic Vulnerability)</System:String>
                            <System:String>Wind Serpent: Lightning Breath (Magic Vulnerability)</System:String>
                            <System:String>Bear: Demoralizing Roar (Weakened Blows)</System:String>
                            <System:String>Other</System:String>
                        </ComboBox>
                        <ComboBox Name="CB_Hunter_Pet" Grid.Row="5" Grid.Column="1" Grid.RowSpan="1" Margin="4,2" Grid.ColumnSpan="1" SelectedIndex="11">
                            <System:String>None</System:String>
                            <System:String>Wolf: Furious Howl (Critical Strike)</System:String>
                            <System:String>Serpent: Corrosive Spit (Weakened Armor)</System:String>
                            <System:String>Raptor: Tear Armor (Weakened Armor)</System:String>
                            <System:String>Ravager: Ravage (Physical Vulnerability)</System:String>
