                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Leader of the Pack (Critical Strike),&#x0a;Thrash (Weakened Blows)" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Druid_Guardian" Content="Guardian" Grid.Row="5" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DruidSpec" FontWeight="Bold" Checked="CK_DruidSpec_Changed" />
