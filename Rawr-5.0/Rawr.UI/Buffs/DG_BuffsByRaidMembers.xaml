                    <System:String>Druid</System:String>
                    <System:String>Hunter</System:String>
                    <System:String>Mage</System:String>
                    <System:String>Monk</System:String>
                    <System:String>Paladin</System:String>
                    <System:String>Priest</System:String>
                    <System:String>Rogue</System:String>
                    <System:String>Shaman</System:String>
                    <System:String>Warlock</System:String>
                    <System:String>Warrior</System:String>
                </ComboBox>
                <Button x:Name="BT_Add" Content="Add" Grid.Column="2" Margin="4,2" Height="23" Width="45" Click="BT_Add_Click" />
            </Grid>

            <toolkit:WrapPanel Margin="4" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="2">
                <localUI:GroupBox x:Name="GB_DeathKnight" Margin="2,0">
                    <localUI:GroupBox.Header>
                        <TextBlock Text="Death Knight" FontWeight="Bold" Foreground="#c41e3b"/>
                    </localUI:GroupBox.Header>

                    <Grid x:Name="LO_DeathKnight" Margin="0,-5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <TextBlock Text="How:" FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="Death Knights apply buffs via casts or performing damage." Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" />
                        <!-- Row 1 -->
                        <TextBlock Text="Limits:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="" Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1" />
                        <!-- Row 2 -->
                        <TextBlock Text="All Death Knights:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="4,2" />
                        <TextBlock Text="Horn of Winter (Attack Power)" Margin="4,0" TextWrapping="Wrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="1" />
                        <!-- Rows 3-5 -->
                        <RadioButton x:Name="RB_DK_Blood" Content="Blood" Grid.Row="3" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DeathKnightSpec" FontWeight="Bold" Checked="CK_DeathKnightSpec_Changed" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Scarlet Fever (Weakened Blows)" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_DK_Frost" Content="Frost" Grid.Row="4" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DeathKnightSpec" FontWeight="Bold" Checked="CK_DeathKnightSpec_Changed" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Text="Icy Talons (Attack Speed),&#x0a;Brittle Bones (Physical Vulnerability)" Margin="4,2" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_DK_Unholy" Content="Unholy" Grid.Row="5" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DeathKnightSpec" FontWeight="Bold" Checked="CK_DeathKnightSpec_Changed" />
                        <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Unholy Fenzy (Temp Haste),&#x0a;Ebon Plaguebringer (Physical Vulnerability)" TextWrapping="Wrap" />
                    </Grid>
                </localUI:GroupBox>
