                        <!-- Rows 3-5 -->
                        <RadioButton x:Name="RB_DK_Frost" Content="Frost" Grid.Row="3" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DeathKnightSpec" FontWeight="Bold" Checked="CK_DeathKnightSpec_Changed" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="Frost Fever (Targ AtkSpd Reduc),&#x0a;Brittle Bones (PhysDmg),&#x0a;Improved Icy Talons (Haste)" Margin="4,2" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_DK_Unholy" Content="Unholy" Grid.Row="4" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DeathKnightSpec" FontWeight="Bold" Checked="CK_DeathKnightSpec_Changed" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Ebon Plaguebringer (SpellDmg Multiplier),&#x0a;Unholy Fenzy (Temp Haste)" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_DK_Blood" Content="Blood" Grid.Row="5" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DeathKnightSpec" FontWeight="Bold" Checked="CK_DeathKnightSpec_Changed" />
