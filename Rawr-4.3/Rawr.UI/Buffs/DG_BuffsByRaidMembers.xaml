                        <!-- Rows 3-6 -->
                        <RadioButton x:Name="RB_Druid_Bear" Content="Bear" Grid.Row="3" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DruidSpec" FontWeight="Bold" Checked="CK_DruidSpec_Changed" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="Infected Wounds (Targ AtkSpd Reduc),&#x0a;Demoralizing Roar (Targ Dmg Dealt Reduc),&#x0a;Mangle (Bleed Dmg Mult),&#x0a;Leader of the Pack (Crit)" Margin="4,2" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Druid_Cat" Content="Cat" Grid.Row="4" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DruidSpec" FontWeight="Bold" Checked="CK_DruidSpec_Changed" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Infected Wounds (Targ AtkSpd Reduc),&#x0a;Mangle (Bleed Dmg Mult),&#x0a;Leader of the Pack (Crit)" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Druid_Moonkin" Content="Moonkin" Grid.Row="5" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DruidSpec" FontWeight="Bold" Checked="CK_DruidSpec_Changed" />
                        <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Earth and Moon (Targ Spell Dmg Vuln),&#x0a;Moonkin Form (SpellHaste)" TextWrapping="Wrap" />
                        <RadioButton x:Name="RB_Druid_Tree" Content="Tree" Grid.Row="6" Height="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,2" GroupName="DruidSpec" FontWeight="Bold" Checked="CK_DruidSpec_Changed" />
                        <TextBlock Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="4,2" Text="Revitalize (Mana Regen)" TextWrapping="Wrap" />
                    </Grid>
                </localUI:GroupBox>
                <localUI:GroupBox x:Name="GB_Hunter" Margin="2,0">
                    <localUI:GroupBox.Header>
                        <TextBlock Text="Hunter" FontWeight="Bold" Foreground="Green"/>
                    </localUI:GroupBox.Header>

                    <Grid Margin="0,-5,0,0">
                        <Grid.ColumnDefinitions>
