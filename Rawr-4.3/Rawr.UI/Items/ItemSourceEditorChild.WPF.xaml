                <System:String>Unknown</System:String> <!-- Failed to parse the Source or it hasn't been added before -->
                <System:String>Vendor</System:String>
                <System:String>Faction</System:String>
                <System:String>PvP</System:String>
                <System:String>Crafted</System:String>
                <System:String>World Drop</System:String>
                <System:String>Static Drop</System:String>
                <System:String>Quest</System:String>
                <System:String>Container</System:String>
